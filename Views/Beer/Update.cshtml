@using DemoMVC.Models.ViewModels
@model BeerViewModel


<h1>Actualizar Cerveza</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input asp-for="BeerId" type="hidden" value="@ViewBag.Beer.Beerid"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@ViewBag.Beer.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" vvalue="Actualizar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}